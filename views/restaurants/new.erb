    <div class="row">
      <div class="col-lg-12">

        <h2 class="page-header">Add restaurant</h2>
        
        <form class="prevent-enter-key" action="/add" method="post" enctype="multipart/form-data">
          <div class="form-group userform">
            <label for="">Name*</label>
            <input class="form-control" name="name" type="text" value="<%= @restaurant.name %>">
            <p class="error-msg"><%= @errors[:name] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Address*</label>
            <input class="form-control" name="address" type="text" value="<%= @restaurant.address %>">
            <p class="error-msg"><%= @errors[:address] %></p>
          </div>
          
          <div class="form-group userform">
            <label for="">Cuisines*</label>
            <input class="form-control" name="cuisines" type="text" value="<%= @restaurant.cuisines %>">
            <p class="error-msg"><%= @errors[:cuisines] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Price range*</label>
            <div>
              <select name="price_range">
                <option value="" > </option>
                <option value="1" <%= @restaurant.price_range == 1 ? "selected" : "" %>>1</option>
                <option value="2" <%= @restaurant.price_range == 2 ? "selected" : "" %>>2</option>
                <option value="3" <%= @restaurant.price_range == 3 ? "selected" : "" %>>3</option>
                <option value="4" <%= @restaurant.price_range == 4 ? "selected" : "" %>>4</option>
                <option value="5" <%= @restaurant.price_range == 5 ? "selected" : "" %>>5</option>
              </select>
              <p class="error-msg"><%= @errors[:price_range] %></p>
            </div>
          </div>
  
          <div class="form-group userform">        
            <label for="">Image file</label>
            <input type="file" name="image">
          </div>

          <div class="form-group userform">
            <label for="">Notes</label>
            <textarea class="form-control" name="notes" cols="35" rows="2"><%= @restaurant.notes %></textarea>
          </div>

          <div class="form-group userform">
            <label for="">Rating</label>
            <div>
              <select name="rating" >
                <option value=""> </option>
                <option value="1" <%= @restaurant.rating == 1 ? "selected" : "" %>>1</option>
                <option value="2" <%= @restaurant.rating == 2 ? "selected" : "" %>>2</option>
                <option value="3" <%= @restaurant.rating == 3 ? "selected" : "" %>>3</option>
                <option value="4" <%= @restaurant.rating == 4 ? "selected" : "" %>>4</option>
                <option value="5" <%= @restaurant.rating == 5 ? "selected" : "" %>>5</option>
              </select>
            </div>
          </div>
          
          <button class="btn btn-default">Add restaurant +</button>
        </form>
        
      </div>
    </div>