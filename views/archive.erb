
    <!-- Page Header -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
              <% if logged_in? && current_user['username'] == params[:username] %>
                My Archive
              <% else %>
                <%= @user['name'] %>'s Archive
              <% end %>
            </h2>
        </div>
    </div>
    <!-- /.row -->

    <!-- Projects Row -->
    <div class="row">
        
      <% @restaurants.each do |restaurant| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 portfolio-item">

          <h4><%= restaurant['name'] %></h4>

          <p><%= restaurant['address'] %></p>

          <p><%= restaurant['cuisines'] %></p>

          <% for i in 1..5 %>
            <% if i <= restaurant['price_range'] %>
              <img src="/images/star2.png">
            <% else %>
              <img src="/images/star1.png">
            <% end %>
          <% end %>

          <img class="img-responsive" src="<%= restaurant['photo_url'] %>" alt="">

          <% if logged_in? && current_user['username'] == params[:username] %>
    
            <form action="/restaurant/<%= restaurant['id'] %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <input type="hidden" name="dir" value="/archive">
              <button>Delete</button>
            </form>

            <form action="/restaurant/<%= restaurant['id'] %>" method="post">
                <input type="hidden" name="_method" value="patch">
                <input type="hidden" name="archive" value="false">
                <input type="hidden" name="dir" value="/archive">
                <button>Unarchive</button>
              </form>

            <form action="/restaurant" method="post">
              
              <input type="hidden" name="zomato_id" value="<%= restaurant['zomato_id'] %>">
              <input type="hidden" name="name" value="<%= restaurant['name'] %>">
              <input type="hidden" name="address" value="<%= restaurant['address'] %>">
              <input type="hidden" name="cuisines" value="<%= restaurant['cuisines'] %>">
              <input type="hidden" name="price_range" value="<%= restaurant['price_range'] %>">
              <input type="hidden" name="photo_url" value="<%= restaurant['photo_url'] %>">
              <input type="hidden" name="rating" value="<%= restaurant['rating'] %>">
              <input type="hidden" name="notes" value="<%= restaurant['notes'] %>">


              <button>Add another</button>
            </form>

            <% for i in 1..5 %>
                <% if !!restaurant['rating'] && i <= restaurant['rating'] %>
                  <form action="/restaurant/<%= restaurant['id'] %>" method="post">
                    <input type="hidden" name="dir" value="/archive">
                    <input type="hidden" name="_method" value="patch">
                    <input type="hidden" name="rating" value="<%= i %>">
                    <button><img src="/images/star2.png"></button>
                  </form>
                <% else %>
                  <form action="/restaurant/<%= restaurant['id'] %>" method="post">
                    <input type="hidden" name="dir" value="/archive">
                    <input type="hidden" name="_method" value="patch">
                    <input type="hidden" name="rating" value="<%= i %>">
                    <button><img src="/images/star1.png"></button>
                  </form>
                <% end %>
              <% end %>
          
            <form action="/restaurant/<%= restaurant['id'] %>" method="post">
              <input type="hidden" name="_method" value="patch">
              <input type="hidden" name="dir" value="/archive">
              <label for="">Notes</label>
              <textarea name="notes" cols="35" rows="3"><%= restaurant['notes'] %></textarea>
              <button>save</button>
            </form>

          <% else %>

            <% for i in 1..5 %>
              <% if !!restaurant['rating'] && i <= restaurant['rating'] %>
                <img src="/images/star2.png">
              <% else %>
                <img src="/images/star1.png">
              <% end %>
            <% end %>    

            <% if logged_in? %>

              <form action="/restaurant" method="post">
                <input type="hidden" name="dir" value="/archive">
                <input type="hidden" name="zomato_id" value="<%= restaurant['id'] %>">
                <input type="hidden" name="name" value="<%= restaurant['name'] %>">
                <input type="hidden" name="address" value="<%= restaurant['address'] %>">
                <input type="hidden" name="cuisines" value="<%= restaurant['cuisines'] %>">
                <input type="hidden" name="price_range" value="<%= restaurant['price_range'] %>">
                <input type="hidden" name="photo_url" value="<%= restaurant['photo_url'] %>">
                <input type="hidden" name="rating" value="<%= restaurant['rating'] %>">
                <input type="hidden" name="notes" value="<%= restaurant['notes'] %>">

                <% if !!Restaurant.find_by(user_id: session[:user_id], zomato_id: restaurant['zomato_id']) %>
                  <button>Add another</button>
                <% else %>
                  <button>Add</button>
                <% end %>

              </form>
            
            <% end %>

          <% end %>

        </div>


      <% end %>
        

    </div>
