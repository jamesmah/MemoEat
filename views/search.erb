    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Search results
            </h2>
        </div>
    </div>

    <div class="row">

      <% restaurant_count = 0 %>
      <% @restaurants.each do |restaurant| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 restaurant-item">

          <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading" style="background-image: url(<%= restaurant['restaurant']['thumb'] %>);" data-toggle="collapse" href="#collapse<%= restaurant['restaurant']['id']%>">
                
                  
                <h4><%= restaurant['restaurant']['name'] %></h4>
                <br>
                <p><%= restaurant['restaurant']['location']['address'] %></p>
                <div class="visible-xs"> </div>
                <a href="#" class="visible-xs"><img src="/images/sort-down.png"></a>
                
              </div>
              <div id="collapse<%= restaurant['restaurant']['id']%>" class="panel-collapse collapse in memo-collapse">
                
                <div class="panel-body search-panel-body">

                  <p style="font-style: italic;"><%= restaurant['restaurant']['cuisines'] %></p>

                  <div></div>
                  <p>Price range</p>
                  <div>
                    <% for i in 1..5 %>
                      <% if i <= restaurant['restaurant']['price_range'] %>
                        <img src="/images/coin2.png">
                      <% else %>
                        <img src="/images/coin1.png">
                      <% end %>
                    <% end %>
                  </div>

                  <div></div>
                  
                  <p>Zomato rating</a></p>

                    <div>
                      <% for i in 1..5 %>
                        <% if i <= restaurant['restaurant']['user_rating']['aggregate_rating'].to_f + 0.5 %>
                          <img src="/images/star2.png">
                        <% else %>
                          <img src="/images/star1.png">
                        <% end %>
                      <% end %>    
                    </div>

                </div>
                <div class="panel-footer">
                    
                  <% if logged_in? %>
                  
                    <form class="add-form" action="/restaurant" method="post">
                      <input type="hidden" name="dir" value="<%= @dir %>">
                      <input type="hidden" name="zomato_id" value="<%= restaurant['restaurant']['id'] %>">
                      <input type="hidden" name="name" value="<%= restaurant['restaurant']['name'] %>">
                      <input type="hidden" name="address" value="<%= restaurant['restaurant']['location']['address'] %>">
                      <input type="hidden" name="cuisines" value="<%= restaurant['restaurant']['cuisines'] %>">
                      <input type="hidden" name="price_range" value="<%= restaurant['restaurant']['price_range'] %>">
                      <input type="hidden" name="photo_url" value="<%= restaurant['restaurant']['thumb'] %>">

                      <% if !!Restaurant.find_by(user_id: session[:user_id], zomato_id: restaurant['restaurant']['id'], archive: false) %>
                        <button type="button">Added!</button>
                      <% elsif !!Restaurant.find_by(user_id: session[:user_id], zomato_id: restaurant['restaurant']['id'], archive: true) %>
                        <button type="button">Archived!</button>
                      <% else %>
                        <button class="add-btn">Add</button>
                      <% end %>
                    </form>

                  <% end %>
                  


                </div>
              

              </div>
            </div>
          </div>


        </div>
      
      <% end %>
        

    </div>
