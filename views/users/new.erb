    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">Create user account</h2>
        <form action="/signup" method="post">

          <div class="form-group userform">
            <label for="">Name*</label>
              <input class="form-control" name="name" type="text" value="<%= @user.name %>">
              <p class="error-msg"><%= @errors[:name] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Username*</label>
            <input class="form-control" name="username" type="text" value="<%= @user.username %>">
            <p class="error-msg"><%= @errors[:username] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Email*</label>
            <input class="form-control" name="email" type="text" value="<%= @user.email %>">
            <p class="error-msg"><%= @errors[:email] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Password*</label>
            <input class="form-control" name="password" type="password">
            <p class="error-msg"><%= @errors[:password] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Verify Password*</label>
            <input class="form-control" name="password_confirmation" type="password">
            <p class="error-msg"><%= @errors[:password_confirmation] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Location*</label>
            <select name="location_id">
              <option value="259" selected>Melbourne</option>
            </select>
            <p class="error-msg"><%= @errors[:location_id] %></p>
          </div>

          <div class="form-group userform">
            <label for="">Description</label>
            <textarea class="form-control" name="description" rows="3"><%= @user.description %></textarea>
          </div class="form-group userform">

          <button class="btn btn-default">Create user</button>
        </form>
      </div>
    </div>