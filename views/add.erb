    <!-- Page Header -->
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">Add restaurant</h2>
        
        <form action="/restaurant" method="post">

          <div>
            <label for="">Name*</label>
            <% if !@restaurant %>
              <input name="name" type="text">
            <% else %>
              <input name="name" type="text" value="<%= @restaurant.name %>">
              <%= @restaurant.errors.messages[:name].join(", ") %>
            <% end %>
          </div>

          <div>
            <label for="">Address*</label>
            <% if !@restaurant %>
              <textarea name="address" cols="35" rows="2"></textarea>
            <% else %>
              <textarea name="address" cols="35" rows="2"><%= @restaurant.address %></textarea>
              <%= @restaurant.errors.messages[:address].join(", ") %>
            <% end %>
          </div>
          
          <div>
            <label for="">Cuisines*</label>
            <% if !@restaurant %>
              <textarea name="cuisines" cols="35" rows="2"></textarea>
            <% else %>
              <textarea name="cuisines" cols="35" rows="2"><%= @restaurant.cuisines %></textarea>
              <%= @restaurant.errors.messages[:address].join(", ") %>
            <% end %>
          </div>

          <div>
            <label for="">Price range(1-5)</label>
            <select name="price_range">
              <option value="" > </option>
              <option value="1" <%= !!@restaurant && @restaurant.price_range==1 ? "selected" : "" %>>1</option>
              <option value="2" <%= !!@restaurant && @restaurant.price_range==2 ? "selected" : "" %>>2</option>
              <option value="3" <%= !!@restaurant && @restaurant.price_range==3 ? "selected" : "" %>>3</option>
              <option value="4" <%= !!@restaurant && @restaurant.price_range==4 ? "selected" : "" %>>4</option>
              <option value="5" <%= !!@restaurant && @restaurant.price_range==5 ? "selected" : "" %>>5</option>
            </select>
          </div>

          <div>
            <label for="">Photo URL</label>
            <% if !@restaurant %>
              <textarea name="photo_url" cols="35" rows="2"></textarea>
            <% else %>
              <textarea name="photo_url" cols="35" rows="2"><%= @restaurant.photo_url %></textarea>
            <% end %>
          </div>
          

          <div>
            <label for="">Notes</label>
            <% if !@restaurant %>
              <textarea name="notes" cols="35" rows="2"></textarea>
            <% else %>
              <textarea name="notes" cols="35" rows="2"><%= @restaurant.notes %></textarea>
            <% end %>
          </div>

          <div>
            <label for="">Rating</label>
            <select name="rating" >
              <option value=""> </option>
              <option value="1" <%= !!@restaurant && @restaurant.rating==1 ? "selected" : "" %>>1</option>
              <option value="2" <%= !!@restaurant && @restaurant.rating==2 ? "selected" : "" %>>2</option>
              <option value="3" <%= !!@restaurant && @restaurant.rating==3 ? "selected" : "" %>>3</option>
              <option value="4" <%= !!@restaurant && @restaurant.rating==4 ? "selected" : "" %>>4</option>
              <option value="5" <%= !!@restaurant && @restaurant.rating==5 ? "selected" : "" %>>5</option>
            </select>
          </div>

          <button>Update details</button>
        </form>
      </div>

    </div>