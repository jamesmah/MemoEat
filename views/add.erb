    <!-- Page Header -->
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">Add restaurant</h2>
        
        <form action="/restaurant" method="post" enctype="multipart/form-data">

          <div class="form-group userform">
            <label for="">Name*</label>
            <% if !@restaurant %>
              <input class="form-control" name="name" type="text">
            <% else %>
              <input class="form-control" name="name" type="text" value="<%= @restaurant.name %>">
              <%= @restaurant.errors.messages[:name].join(", ") %>
            <% end %>
          </div>

          <div class="form-group userform">
            <label for="">Address*</label>
            <% if !@restaurant %>
              <input class="form-control" name="address" type="text">
            <% else %>
              <input class="form-control" name="address" type="text" value="<%= @restaurant.address %>">
              <%= @restaurant.errors.messages[:address].join(", ") %>
            <% end %>
          </div>
          
          <div class="form-group userform">
            <label for="">Cuisines*</label>
            <% if !@restaurant %>
              <input class="form-control" name="cuisines" type="text">
            <% else %>
              <input class="form-control" name="cuisines" type="text" value="<%= @restaurant.cuisines %>">
              <%= @restaurant.errors.messages[:cuisines].join(", ") %>
            <% end %>
          </div>

          <div class="form-group userform">
            <label for="">*Price range</label>
            <div>
              <select name="price_range">
                <option value="" > </option>
                <option value="1" <%= !!@restaurant && @restaurant.price_range==1 ? "selected" : "" %>>1</option>
                <option value="2" <%= !!@restaurant && @restaurant.price_range==2 ? "selected" : "" %>>2</option>
                <option value="3" <%= !!@restaurant && @restaurant.price_range==3 ? "selected" : "" %>>3</option>
                <option value="4" <%= !!@restaurant && @restaurant.price_range==4 ? "selected" : "" %>>4</option>
                <option value="5" <%= !!@restaurant && @restaurant.price_range==5 ? "selected" : "" %>>5</option>
              </select>
              <% if !!@restaurant %>
              <%= @restaurant.errors.messages[:price_range].join(", ") %>
              <% end %>
            </div>
          </div>
  
          <div class="form-group userform">        
            <label for="">Image file</label>
            <input type="file" name="image" />
          </div>

          <!-- <br> -->

          <div class="form-group userform">
            <label for="">Notes</label>
            <% if !@restaurant %>
              <textarea class="form-control" name="notes" cols="35" rows="2"></textarea>
            <% else %>
              <textarea class="form-control" name="notes" cols="35" rows="2"><%= @restaurant.notes %></textarea>
            <% end %>
          </div>

          <div class="form-group userform">
            <label for="">Rating</label>
            <div>
              <select name="rating" >
                <option value=""> </option>
                <option value="1" <%= !!@restaurant && @restaurant.rating==1 ? "selected" : "" %>>1</option>
                <option value="2" <%= !!@restaurant && @restaurant.rating==2 ? "selected" : "" %>>2</option>
                <option value="3" <%= !!@restaurant && @restaurant.rating==3 ? "selected" : "" %>>3</option>
                <option value="4" <%= !!@restaurant && @restaurant.rating==4 ? "selected" : "" %>>4</option>
                <option value="5" <%= !!@restaurant && @restaurant.rating==5 ? "selected" : "" %>>5</option>
              </select>
            </div>
          </div>
          
          <button class="btn btn-default">Add restaurant +</button>
        </form>
      </div>

      <br>
      <br>
      

    </div>